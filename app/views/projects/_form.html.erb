<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :creator %><br />
    <%= options_from_collection_for_select(User.all, :id, :username) %>
		<%= collection_select(:project, :creator, User.all, :id, :username, :prompt => "Please select user") %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= options_from_collection_for_select(User.all, :id, :username) %>
		<%= collection_select(:project, :user_id, User.all, :id, :username, :prompt => "Please select user") %>
  </div>
  <div class="field">
    <%= f.label :public %><br />
    <%= f.check_box :public %>
  </div>
  <div class="field">
    <%= f.label :approved %><br />
    <%= f.check_box :approved %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
