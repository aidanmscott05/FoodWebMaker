
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>
		
	<div class="row-fluid">
		<div class=span6">
			<h2 style="text-align: center">Sign up <br />
				<button type="button" data-toggle="collapse" data-target="#inst" class="btn btn-info btn-mini">
				Instructions
				</button>
			</h2>
		</div>
	</div>
	
	<div class="span5 offset3">
		<div id="inst" style="text-align: center" class="collapse">
			<div class="well">
			<b>
				Please fill out the information below.<br \> 
				If your project is not listed please select New Project 
				and write your project name in the comment area.
			</b>
			</div>
		</div>
	</div>
	
	<div class="span5 offset3">
		<div class="well">
			<div class="container">
			
				<div class="row-fluid">
					<div class="span3">
						<div>
							<br />
							<%= f.label :first_name %>
							<%= f.text_field :firstname, :autofocus => true %>
						</div>
					</div>

					<div>
						<br />
						<%= f.label :last_name %>
						<%= f.text_field :lastname %>
					</div>
				</div>

				<div class="row-fluid">
					<div class="span3">
						<div>
							<br />
							<%= f.label :username %>
							<%= f.text_field :username %>
						</div>
					</div>
			
					<div>
						<br />
						<%= f.label :email %>
						<%= f.email_field :email %>
					</div>
				</div>
					
				<div class="row-fluid">
					<div class="span3">
						<div> 
							<br />
							<%= f.label :password %>
							<%= f.password_field :password %>
						</div>
					</div>
					
					<div>
						<br />
						<%= f.label :password_confirmation %>
						<%= f.password_field :password_confirmation %>
					</div>
				</div>
					
				<div class="row-fluid">
					<div class="span3">
						<div>
							<br />
							<%= f.label :project_id %>
							<%= options_from_collection_for_select(Project.all, :id, :name) %>
							<%= collection_select(:user, :project_id, Project.all, :id, :name, :prompt => "Please select project") %>
						</div>
					</div>
					
					<div>
						<br />
						<%= f.label :comment %>
						<%= f.text_area :comment, :size => "15x5" %><br />
					</div>
				</div>
				
				<div class="row-fluid">
					<div class="span3">
						<div>
							<%= f.submit "Sign up" %> 
						</div>
						<%= render "devise/shared/links" %>
				</div>
			</div>
	</div>
<% end %>

